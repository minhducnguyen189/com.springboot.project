{
  "$id": "http://example.com/example.json",
  "type": "object",
  "$schema": "http://json-schema.org/draft-07/schema",
  "required": [
    "name",
    "value"
  ],
  "properties": {
    "name": {
      "$id": "#/properties/name",
      "type": "string",
      "minLength": 1
    },
    "value": {
      "$id": "#/properties/value",
      "type": "object",
      "additionalProperties": true
    }
  }
}