{
    "persons": [
                {{#persons}}
                {
                    "id": {{{id}}},
                    "name": {{{name}}},
                    "sex": {{{sex}}},
                    "age": {{{age}}},
                    "additionalInfo": {
                        "comment": "{{! ignore me}}",
                        {{#info}}
                            "job": {{{mainJob}}},
                            "companyAddress": {{{workplace}}},
                            "employeeId": {{{staffId}}},
                        {{/info}}
                        {{#car}}
                             "vehicleId": {{{id}}},
                             "vehicleName": {{{carName}}},
                        {{/car}}
                        {{^car}}
                             "noCar": true,
                        {{/car}}
                        {{> laptop}}
                    }
                }
                {{^-last}},{{/-last}}
                {{/persons}}
    ]
}